generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  hubspotToken  HubSpotToken?
  seat          Seat?
  quotaConfigs  QuotaConfig[]
  formulas      Formula[]
  templates     ReportTemplate[]
  reports       GeneratedReport[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum SeatRole {
  rep
  manager
}

enum SeatStatus {
  active
  paused
  inactive
}

model Seat {
  id              String     @id @default(cuid())
  userId          String?    @unique
  name            String
  email           String?
  role            SeatRole   @default(rep)
  status          SeatStatus @default(active)
  hubspotOwnerId  String?
  user            User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// HubSpot OAuth tokens
model HubSpotToken {
  id           String   @id @default(cuid())
  userId       String   @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  portalId     String?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Quota configuration
model QuotaConfig {
  id        String   @id @default(cuid())
  userId    String
  metric    String   // emails_sent, calls_made, meetings_held, deals_created, deals_won, revenue
  period    String   // daily, weekly, monthly
  target    Float
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, metric, period])
}

// Custom formula definitions
model Formula {
  id        String   @id @default(cuid())
  userId    String
  name      String
  formula   String   // JSON: { "calls": 1, "emails": 0.5, "meetings": 5 }
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Cached metrics snapshots
model CachedMetrics {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  period    String   // daily, weekly, monthly
  metrics   String   // JSON blob with all metrics
  createdAt DateTime @default(now())

  @@unique([userId, date, period])
}

// Report templates (building blocks configuration)
model ReportTemplate {
  id        String   @id @default(cuid())
  userId    String
  name      String
  blocks    String   // JSON array of block configurations
  isDefault Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reports   GeneratedReport[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Generated reports (snapshots)
model GeneratedReport {
  id         String   @id @default(cuid())
  userId     String
  templateId String
  date       DateTime
  markdown   String   // Generated markdown output
  data       String   // JSON snapshot of data used
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  template   ReportTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

// Mapping between HubSpot meetings and Grain recordings
model GrainMeetingMapping {
  id               String   @id @default(cuid())
  hubspotMeetingId String   @unique
  grainMeetingId   String
  grainShareUrl    String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// Magic Formula targets (global, team, or owner-specific)
model MagicFormulaTarget {
  id                 String   @id @default(cuid())
  scope              String   // global, team, owner
  teamId             String?
  ownerId            String?
  meetingsTarget     Int
  qualOppsTarget     Int
  conversionsTarget  Int
  mrrPerConversion   Int
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([scope, teamId, ownerId])
}
